<div id="modal-overlay" onclick="closeModal()"></div>

<div id="login-modal">
    <button class="close-btn" onclick="closeModal()">&times;</button>
    
    <div class="modal-logo">
        <%= image_tag "logo.png", alt: "Students Connect Logo" %>
