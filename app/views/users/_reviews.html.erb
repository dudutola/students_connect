<%# app/views/users/_reviews.html.erb %>
<div class="user-reviews-section mt-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h4>Reviews (<%= @user.reviews.count %>)</h4>
    <div class="average-rating">
      <% if @user.reviews.any? %>
        <span class="badge bg-success p-2">
          <%= @user.average_rating %> <i class="fas fa-star text-warning"></i>
          <small>(<%= @user.reviews.count %> reviews)</small>
        </span>
      <% else %>
        <span class="badge bg-secondary p-2">No ratings yet</span>
      <% end %>
    </div>
  </div>
  
  <% if @user.reviews.any? %>
    <div class="reviews-list">
      <% @user.reviews.order(created_at: :desc).each do |review| %>
        <div class="review-card mb-3 p-3 border rounded shadow-sm">
          <div class="d-flex justify-content-between align-items-center mb-2">
            <div class="reviewer-info d-flex align-items-center">
              <% if review.reviewer.avatar_url.present? %>
                <%= image_tag review.reviewer.avatar_url, class: "avatar-small me-2", style: "width: 40px; height: 40px; border-radius: 50%;" %>
              <% else %>
                <div class="avatar-placeholder me-2" style="width: 40px; height: 40px; border-radius: 50%; background-color: #ccc; display: flex; align-items: center; justify-content: center;">
                  <i class="fas fa-user"></i>
                </div>
              <% end %>
              <strong><%= review.reviewer.name %></strong>
            </div>
            <div class="rating">
              <% review.rating.times do %>
                <i class="fas fa-star text-warning"></i>
              <% end %>
              <% (5 - review.rating).times do %>
                <i class="far fa-star text-warning"></i>
              <% end %>
            </div>
          </div>
          
          <p class="review-comment"><%= review.comment %></p>
          
          <div class="review-meta text-muted mt-2 d-flex justify-content-between">
            <small><%= time_ago_in_words(review.created_at) %> ago</small>
            <% if current_user == review.reviewer || current_user.admin? %>
              <%= button_to review_path(review), method: :delete, class: "btn btn-link btn-sm text-danger p-0", data: { confirm: "Are you sure you want to delete this review?" } do %>
                <i class="fas fa-trash-alt"></i>
              <% end %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-4 border rounded bg-light">
      <p class="text-muted mb-0">No reviews yet</p>
    </div>
  <% end %>
</div>